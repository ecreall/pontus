<h5> <i class="glyphicon glyphicon-stats"></i> Nombre des processus dans l'application: <span class="badge pull">${bloque+termine+encours}</span></h5>

<div class="row">
          <div class="col-lg-4">
            <div class="panel panel-warning">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-0 text-right">
                    <p class="announcement-heading">${bloque}</p>
                    <p class="announcement-text">Processus bloqués</p>
                  </div>
                  <div class="col-xs-1">
                    <h1><i class="glyphicon glyphicon-minus-sign"></i></h1>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="panel panel-danger">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-0 text-right">
                    <p class="announcement-heading">${termine}</p>
                    <p class="announcement-text">Processus terminés</p>
                  </div>
                  <div class="col-xs-1">
                   <h1> <i class="glyphicon glyphicon-off"></i></h1>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="panel panel-success">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-0 text-right">
                    <p class="announcement-heading">${encours}</p>
                    <p class="announcement-text">Processus en cours</p>
                  </div>

                  <div class="col-xs-1">
                    <h1><i class="glyphicon glyphicon-play"></i></h1>
                  </div>
                </div>
              </div>
            </div>
          </div>
</div>

<h5> <i class="glyphicon glyphicon-stats"></i> Pourcentage de l'activité des processus:</h5>
<div id="chart">
   <script type="text/javascript">
      var data;
      var chart;

      // Load the Visualization API and the piechart package.
      google.load('visualization', '1', {'packages':['corechart']});

      // Set a callback to run when the Google Visualization API is loaded.
      google.setOnLoadCallback(drawChart);

      // Callback that creates and populates a data table,
      // instantiates the pie chart, passes in the data and
      // draws it.
      function drawChart() {

        // Create our data table.
        data = new google.visualization.DataTable();
        data.addColumn('string', 'Topping');
        data.addColumn('number', 'Slices');
        data.addRows([
          ['En cours', ${encours}],
          ['Bloques', ${bloque}],
          ['Termines', ${termine}],
        ]);
        // Set chart options
        var options = { 'colors':['#4aa241','#ff7500', '#ef2f10'],
                        'is3D': true,
                       'width':300,
                       'height':300
                       };

        // Instantiate and draw our chart, passing in some options.
        chart = new google.visualization.PieChart(document.getElementById('chart_div'));
        google.visualization.events.addListener(chart, 'select', selectHandler);
        chart.draw(data, options);
      }

      function selectHandler() {
        var selectedItem = chart.getSelection()[0];
        var value = data.getValue(selectedItem.row, 0);
        var code = 'encours';
        if (value == "Bloques") {code = 'bloques';}
        if (value == "Termines") {code = 'termines';}
         $('#'+code).modal('show');
      }

    </script>
  <div id="chart_div" style="width:300; height:300;"></div>
</div>

  <div class="modal fade" id="encours" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
    <div class="modal-content">
