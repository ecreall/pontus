                             </td>
                             <td >
                                    ${p['index']}
                             </td>
                             <td >
                                 <ul class="list-group">
                                     <li class="list-group-item" tal:repeat="n states">
                                             ${n.capitalize()}
                                     </li>
                                 </ul>
                             </td>
