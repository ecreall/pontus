<div metal:use-macro="main_template">

  <metal:head-more fill-slot="head-more">
    <!-- CSS -->
    <link rel="stylesheet" 
          href="${request.static_url('deform:static/css/form.css')}"
          type="text/css"/>
    <tal:block repeat="reqt css_links|[]">
      <link rel="stylesheet" 
            href="${request.static_url(reqt)}" 
            type="text/css" />
     </tal:block>

    <!-- JavaScript -->
    <tal:block repeat="reqt js_links|[]">
      <script type="text/javascript"
              src="${request.static_url(reqt)}"
       ></script>
    </tal:block>
  </metal:head-more>

 <div metal:fill-slot="left">
   <div tal:omit-tag="" tal:define="slot slots['left']|nothing"
                        tal:condition="slot">
      <div tal:omit-tag="" tal:define="item slot[0]">
           <div tal:define="item slot[0]" tal:replace="item['view'].render_item(item, 'left')" />   
     </div>
   </div>
 </div>


 <div metal:fill-slot="main">
   <div tal:omit-tag="" tal:define="slot slots['main']|nothing"
                        tal:condition="slot">
      <div tal:omit-tag="" tal:define="item slot[0]">
           <div tal:define="item slot[0]" tal:replace="item['view'].render_item(item, 'main')" />   
     </div>        
   </div>
 </div>


 <div metal:fill-slot="right">
   <div tal:omit-tag="" tal:define="slot slots['right']|nothing"
                        tal:condition="slot">
      <div tal:omit-tag="" tal:define="item slot[0]">
           <div tal:define="item slot[0]" tal:replace="item['view'].render_item(item, 'right')" />   
     </div>      
   </div>
 </div>


 <div metal:fill-slot="footer">
   <div tal:omit-tag="" tal:define="slot slots['footer']|nothing"
                        tal:condition="slot">
      <div tal:omit-tag="" tal:define="item slot[0]">
           <div tal:define="item slot[0]" tal:replace="item['view'].render_item(item, 'footer')" />   
     </div>       
   </div>
 </div>

</div>
