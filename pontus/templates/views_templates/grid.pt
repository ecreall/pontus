<div metal:use-macro="main_template">

  <metal:head-more fill-slot="head-more">
    <!-- CSS -->
    <link rel="stylesheet" 
          href="${request.static_url('deform:static/css/form.css')}"
          type="text/css"/>
    <tal:block repeat="reqt list(set(css_links))|[]">
      <link rel="stylesheet" 
            href="${request.static_url(reqt)}" 
            type="text/css" />
     </tal:block>

    <!-- JavaScript -->
    <tal:block tal:define="set_js_links []" repeat="reqt js_links|[]">
      <tal:if condition="reqt not in set_js_links">
      <script type="text/javascript"
              src="${request.static_url(reqt)}"
       ></script>
        <tal:block tal:define="set_js_links set_js_links.append(reqt)"></tal:block>
     </tal:if>
    </tal:block>
  </metal:head-more>

 <div metal:fill-slot="left">
   <div tal:omit-tag="" tal:define="slot coordinates['left']|nothing"
                        tal:condition="slot">
      <div class="pontus-left" tal:omit-tag="" tal:define="item slot[0]">
           <div tal:define="item slot[0]; parent (('ismultipleview' in item) and item['view'] or None)"
                tal:replace="item['view'].render_item(item, 'left', parent)" /> 
     </div>
   </div>
 </div>


 <div metal:fill-slot="main">
   <div tal:omit-tag="" tal:define="slot coordinates['main']|nothing"
                        tal:condition="slot">
      <div class="pontus-main" tal:define="item slot[0]">
           <div tal:define="item slot[0]; parent (('ismultipleview' in item) and item['view'] or None)"
                tal:replace="item['view'].render_item(item, 'main', parent)" />   
     </div>        
   </div>
 </div>


